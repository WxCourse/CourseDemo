/* pages/login/login.wxss */
.wrapper{
  position:relative;
  z-index: 90;
  padding-bottom: 40rpx;
}

.login-box {
  /* margin-top: 0%; */
  /* 登录距离阴影盒子底部的距离 */
  padding: 15% 1%; 
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 8rpx 8rpx 8rpx 8rpx #888888;
}

.login-box>input{
  margin: 5% 0 8% 0;
  border-bottom: 1rpx solid lightgray;
}

.left-top-sign{
  font-size: 120rpx;
  color: #f8f8f8;
  position:relative;
  left: -16rpx;
}

.welcome{
  position:relative;
  left: 50rpx;
  top: -80rpx;
  font-size: 40rpx;
  color: #555;
}


.input-content{
  padding: 0 60rpx;
}
.input-item{
  display:flex;
  flex-direction: column;
  align-items:flex-start;
  justify-content: center;
  border-radius: 50rpx;
  padding: 0 30rpx;
  background:#f8f6fc;
  height: 120rpx;
  border-radius: 4px;
  margin-bottom: 50rpx;

}

.input-item:last-child{
  margin-bottom: 0;
}
.input-item .tit{
  height: 50rpx;
  line-height: 56rpx;
  font-size: 30rpx;
  color: #606266;
}
.input-item input{
  height: 60rpx;
  font-size: 30rpx;
  color: #303133;
  width: 100%;
}
.confirm-btn{
  width: 580rpx!important;
  height: 76rpx;
  line-height: 76rpx;
  border-radius: 50rpx;
  margin-top: 70rpx;
  background: #43adf7;
  color: #fff;
  font-size: 32rpx;
  padding: 0;
}
.confirm-btn2:after{
  border-radius: 100px;
}
.register-section {
  position:absolute;
  font-size: 28rpx;
  color: #43adf7;
  text-align: left;
  margin-left: 60rpx;
  margin-top: 40rpx;
}

.forget-section{
  font-size: 28rpx;
  color: #43adf7;
  text-align: right;
  margin-right: 60rpx;
  margin-top: 40rpx;
}

.three-line {
  margin: 8% 0;
  text-align: center;
  font-size: 24rpx;
  color: gray;
}

.login-btn {
  width: 100%!important;
  background-color: #2f6afd;
  color: white;
  font-weight: normal;
}

/* 底部三方区域 */
.navContainer {
  display: flex;
}

.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}
.navItem .iconfont {
  width: 100rpx;
  /* height: 100rpx; */
  text-align: center;
  /* line-height: 100rpx; */
  /* background: rgb(56,195,161); */
  font-size: 50rpx;
  /* color: #fff; */
  margin: 10rpx 50rpx;
}
.navItem image {
  width: 100rpx;
  height: 100rpx;
}
.navItem .txt {
  margin-top: 20rpx ;
  margin-bottom: 20rpx;
  font-size: 28rpx;
  /* color: #303133; */
}


